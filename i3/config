#client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00

# ulauncher
bindsym Ctrl+Shift+space exec ulauncher

# screenshot
bindsym Print exec gnome-screenshot
for_window [instance="gnome-screenshot"] floating enable

